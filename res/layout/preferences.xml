<ScrollView android:id="@+id/ScrollView01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:stretchColumns="0">
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/TextViewPreferences" />
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Pomodoro length (Minutes)" />
		</TableRow>
		<TableRow>
			<EditText android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/EditTextPomodoroLength"
				android:numeric="integer" android:maxLength="2" android:hint="Enter length (max 99)" />
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Advanced Mode implements the whole Pomodoro Technique and unlocks many features. " />
		</TableRow>
		<TableRow>
			<CheckBox android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/CheckBoxAdvancedUser"
				android:hint="Advanced Mode" />
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Quick Insert Mode enables an easy shortcut to insert new Activities directly in Todo Today Sheet" />
		</TableRow>
		<TableRow>
			<CheckBox android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/CheckBoxQuickActivityInsert"
				android:hint="Quick Insert Mode?" />
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Display notifications in Status Bar" />
		</TableRow>
		<TableRow>
			<CheckBox android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/CheckBoxNotifications"
				android:hint="Notifications?" />
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Vibrate when Pomodoro finishes/is broken." />
		</TableRow>
		<TableRow>
			<CheckBox android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/CheckBoxVibrate"
				android:hint="Vibrate on Events?" />
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Dim Light when Pomodoro starts. Please disable automatic brightness on your device before enabling this option." />
		</TableRow>
		<TableRow>
			<CheckBox android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/CheckBoxDimLight"
				android:hint="Dim Light?" />
		</TableRow>
	</TableLayout>
</ScrollView>

<ScrollView android:id="@+id/ScrollView01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:stretchColumns="0">
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/TextViewPreferences"
			/>
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Pomodoro length (Minutes)" />
		</TableRow>
		<TableRow>
			<EditText android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/EditTextPomodoroLength"
				android:numeric="integer" android:maxLength="2" android:hint="Enter length (max 99)" />
		</TableRow>
		<TableRow>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Advanced Mode implements the whole Pomodoro Technique, unlocks advanced options and remote Activity retrieval. " />
		</TableRow>
		<TableRow>
			<CheckBox android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/CheckBoxAdvancedUser"
				android:hint="Advanced Mode" />
		</TableRow>
		<Button android:text="Save" android:id="@+id/ButtonSavePreferences"
			style="@style/ButtonMain"></Button>
	</TableLayout>
</ScrollView>
